<% if @user.id == current_user[:id] %>
    <h1><%= @user.username %></h1>
    <h4>About</h4>
    <div class="aboutme">
        <ul>
            <li><%= image_tag @user.image %></li>
            <li>Age: <%= @user.age %></li>
            <li>Zipcode: <%= @user.zipcode %></li>
            <li>Gender: <%= @user.gender %></li>
            <li>Bio: <%= @user.bio %></li>
            <li>Favorite Editions:&nbsp; 
                <% @user.editions.each do |edition| %>
                    <% if edition != @user.editions.last %>
                        <%= edition.name %>,&nbsp;
                    <% else %>
                        <%= edition.name %>
                    <% end %>
                <% end %>
            </li>
            <li>Favorite Classes:&nbsp; 
                <% @user.roles.each do |role| %>
                    <% if role != @user.roles.last %>
                        <%= role.name %>,&nbsp;
                    <% else %>
                        <%= role.name %>
                    <% end %>
                <% end %>
            </li>
        </ul>
        <button><%= link_to 'Edit', edit_user_path %></button>
    </div>
    <div class="mycampaigns">
        <h4>My Campaigns</h4>
        <% @user.campaigns.each do |campaign| %>
            <div>
                <h5><%= link_to campaign.name, campaign %></h5>
                <p>Module - Eddition</p>
            </div>
        <% end %>
        <button><%= link_to 'New', new_campaign_path %></button>
    </div>
<% else %>
    <h1><%= @user.username %></h1>
    <div class="aboutme">
        <ul>
            <li>Age: <%= @user.age %></li>
            <li>Zipcode: <%= @user.zipcode %></li>
            <li>Gender: <%= @user.gender %></li>
            <li>Bio: <%= @user.bio %></li>
            <li>Edditions: 
                <% @user.editions do |edition| %>
                    <%= edition.name %>
                <% end %>
            </li>
            <li>Role Preferences: </li>
        </ul>
    </div>
    <div class="mycampaigns">
        <h4>Campaigns</h4>
        <% @user.campaigns.each do |campaign| %>
            <div>
                <h5><%= link_to campaign.name, campaign %></h5>
                <p>Module - Eddition</p>
            </div>
        <% end %>
    </div>
<% end %>